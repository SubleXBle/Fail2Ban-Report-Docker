# PrÃ¼fe Fail2Ban, UFW, jq, cron
for pkg in fail2ban ufw jq cron; do
  if ! dpkg -s "$pkg" >/dev/null 2>&1; then
    echo "Package $pkg is not installed. Please install it first."
    exit 1
  fi
done

# Optional: Warnung, falls docker/docker-compose fehlen
if ! command -v docker >/dev/null 2>&1; then
  echo "Docker is not installed or not in PATH. Please install Docker."
  exit 1
fi

if ! command -v docker-compose >/dev/null 2>&1; then
  echo "docker-compose is not installed or not in PATH. Please install docker-compose."
  exit 1
fi

# Dann Docker bauen und starten
docker-compose build
docker-compose up -d
